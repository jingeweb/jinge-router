{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*", "scripts/**/*", "*.js", "*.mjs"
  ]
}